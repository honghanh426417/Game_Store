                    <div class="popular-card_list">
                        @foreach (var product in Model.Take(2))
                        {
                            <div class="popular-card">
                                <div class="popular-card-img">
                                    <img src="@product.ImageGame" alt="">
                                </div>
                                <div class="popular-card-price">
