                        <div class="tab-item">
                            <a href="#">Platformer</a>
                        </div>
                        <div class="tab-item">
                            <a href="#">Casual</a>
                        </div>
                        <div class="tab-item">
                            <a href="#">Shooter</a>
                        </div>
                        <div class="tab-item">
