<div class="main-content">
    <div class="products-container">
        @*<h1 class="game-categories_title">Action</h1>*@
        <div class="container-content_products">
            <section class="game-carousel_products">
                <div class="section_header_products">
                    <div class="section_header-title_products">
                        <i class="fa-solid fa-fire"></i>
                        <h3>ON TREND</h3>
                    </div>
                    <div class="view-more">
                        <a href="#">View More</a>
                    </div>
                </div>
                <div class="carousel-container_products">
                    @foreach (var product in Model.Take(4))
                    {
                        <div class="carousel-item_products">
                            <div class="carousel-img-item_products">
                                <a href="/Views/Product" class="game-img-item_products">
                                    <img src="@product.ImageGame" alt="@product.Name">
                                </a>
                                <div class="game-item_price">
                                    <a href="#" class="game-item_cart">
                                        <i class="fa-brands fa-windows"></i>
                                    </a>
                                    <span class="item-price">$@product.Price</span>
                                </div>
                            </div>
                            <div class="carousel-item_info">
                                <h2>@product.Name</h2>
                                <div class="carousel-item_info-date">Release date: <span>@product.ReleaseDate.ToString("MMM dd, yyyy")</span></div>
                                <div class="salepreview">
                                    <div class="gamehover_ReviewScoreValue">
                                        Mostly Positive <span>| @product.Review User Reviews</span>

                                    </div>
                                    <div class="sale-preview-widgets">
                                        <div class="sale-preview-widgets_tags">
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Free to Play</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Vehicular Combat</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Combat</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">World War II</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">VR</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Flight</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Military</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Tanks</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Simulation</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Modern</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Massively Multiplayer</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Cold War</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Realistic</a>
                                            <a href="#" target="_blank" class="salepreviewwidgets_Tagdetail" tabindex="0">Historical</a>


                                        </div>
                                    </div>
                                    <div class="whyRelevant">
                                        <h4>
                                            Why this game is relevant to you:
